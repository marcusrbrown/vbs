{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
            "args": ["--host"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Preview Build",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
            "args": ["preview", "--host"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
