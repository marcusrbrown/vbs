{
  "name": "@marcusrbrown/vbs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A chronological Star Trek viewing guide with progress tracking",
  "keywords": [
    "star-trek",
    "viewing-guide",
    "chronological",
    "progress-tracker",
    "local-first"
  ],
  "author": "Marcus R. Brown <vbs@mrbro.dev>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "lint-staged": "lint-staged"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@bfra.me/eslint-config": "^0.25.0",
    "@bfra.me/prettier-config": "^0.16.0",
    "@bfra.me/tsconfig": "^0.11.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-json-schema-validator": "^5.4.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.2",
    "prettier": "^3.0.0",
    "simple-git-hooks": "2.13.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "prettier": "@bfra.me/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx,css,md,json,yaml,yml}": [
      "eslint --fix"
    ]
  }
}
